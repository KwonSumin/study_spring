<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="common">
	<select id="test" resultType="co.kr.ucs.spring.bean.BoardBean" parameterType="co.kr.ucs.spring.bean.BoardBean">
		select * from board where seq = ${seq}
	</select>
	
	<select id="selectQuery" resultType="Object" parameterType="String" >
		${value}
	</select>
	
	<insert id="insert" parameterType="mvc.co.kr.ucs.bean.CommonQueryBean">
		insert into ${tableName}
		<foreach collection="setStatement" open="(" close=")" item="item" separator=",">
			${item.field}
		</foreach>
		values
		<foreach collection="setStatement" open="(" close=")" item="item" separator=",">
			#{item.value}
		</foreach>
	</insert>
	
	<delete id="delete" parameterType="mvc.co.kr.ucs.bean.CommonQueryBean">
	
	</delete>
	
	<update id="update" parameterType="mvc.co.kr.ucs.bean.CommonQueryBean">
		update ${tableName} set
		<foreach collection="setStatement" item="item" separator=",">
			${item.field} = #{item.value}
		</foreach>
		<if test="ifStatement !=null">
			where
			<foreach collection="ifStatement" item="item" separator="AND">
				${item.field} = #{item.value}
			</foreach>
		</if>
	</update>
	
	<select id="total" resultType="int" parameterType="mvc.co.kr.ucs.bean.CommonQueryBean">
		select count(0) from ${tableName}
		<if test="ifStatement !=null">
			where
			<foreach collection="ifStatement" item="item" separator="AND">
				${item.field} = #{item.value}
			</foreach>
		</if>
	</select>
	
	<select id="list" resultType="HashMap" parameterType="mvc.co.kr.ucs.bean.CommonQueryBean">
		
		<if test="search==null">
			select * from
			( select A.*,ROWNUM AS RNUM, count(*) over() AS TOTCNT FROM
			( select * from ${tableName}
			order by ${primaryKey} desc ) A ) where RNUM <![CDATA[>]]>
			 #{startRow} AND RNUM <![CDATA[<=]]> #{endRow}
		</if>
		<if test="search!=null">
			select * from 
				( select A.*,ROWNUM AS RNUM, count(*) over() AS TOTCNT FROM
				(select * from ${tableName} where ${searchTarget} like '%${search}%'
				order by ${primaryKey} desc) A ) where RNUM <![CDATA[>]]>#{startRow} AND RNUM <![CDATA[<=]]> #{endRow}
		</if>
		
	</select>
	<select id="select" resultType="HashMap" parameterType="mvc.co.kr.ucs.bean.CommonQueryBean">
		select * from ${tableName}
		<if test="ifStatement != null">
			where
			<foreach collection="ifStatement" item="item" separator="AND">
				${item.field} = #{item.value}
			</foreach>
		</if>
	</select>
	
</mapper>